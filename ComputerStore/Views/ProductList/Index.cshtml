@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Lab5.Models.Product>
<section id="galleries">
    <h1>@ViewBag.Title</h1>
    <table>
        @{ var i = 0;}
        <tr>
            @foreach (var product in Model)
            {
                <td style="padding:20px; font-size:10px;text-align:center;  ">
                    @{i++;}
                    <a asp-action="Details" asp-controller="ProductList"
                       asp-route-productID="@product.ProductID">
                        <img src="/@product.ImagePath" asp-append-version="true"
                             alt="@product.ProductName"
                             style="width:180px; height:200px; border: solid; border-radius: 20%; color:blue;" />
                    </a><br />
                    <h3>
                        <a asp-controller="ProductList"
                           asp-action="Details"
                           asp-route-productID="@product.ProductID"> @product.ProductName </a>
                    </h3>
                    <h3>
                        <label asp-for="@product.UnitPrice" class="label"></label>
                        @product.UnitPrice.GetValueOrDefault().ToString("0.00") лв.
                    </h3>
                    <h3>
                        @product.Category.CategoryName
                    </h3>
                </td>
                if (i == 6)
                {
                    i = 0;
                @:</tr>
                @:<tr>
                }
            }
        </tr>
    </table>
</section>
