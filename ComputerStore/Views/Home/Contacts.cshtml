@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Lab5.Models.Contact
<section class="contacts">
    <header>
        <h1>@ViewBag.Title</h1>
        <h3>Моля, попълнете формата!</h3>
    </header>
    <article class="one-column">
        <form asp-action="Logins" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="validation"></div>
            <table style="border-spacing:0px;">
                <tr>
                    <td style="width:50px;height:10px;">
                        <label asp-for="FirstName" class="label"></label>
                    </td>
                    <td style="width:210px;height:10px;">
                        <input asp-for="FirstName" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:1px; "></td>
                    <td style="width:210px;height:1px; ">
                        <span asp-validation-for="FirstName" class="validation"> </span>
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:10px;">
                        <label asp-for="FamilyName" class="label"></label>
                    </td>
                    <td style="width:210px;height:10px;">
                        <input asp-for="FamilyName" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:1px; "></td>
                    <td style="width:210px;height:1px; ">
                        <span asp-validation-for="FamilyName" class="validation"> </span>
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:10px;">
                        <label asp-for="Email" class="label"></label>
                    </td>
                    <td style="width:210px;height:10px;">
                        <input asp-for="Email" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:1px; "></td>
                    <td style="width:210px;height:1px; ">
                        <span asp-validation-for="Email" class="validation"></span>
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:10px;">
                        <label asp-for="Subject" class="label"></label>
                    </td>
                    <td style="width:210px;height:10px;">
                        <select asp-for="Subject" asp-items="Model.Subjects"> <option value="">Избери</option> </select>
                    </td>
                </tr>
                <tr>
                    <td style="width:50px;height:1px; "></td>
                    <td style="width:210px;height:1px; ">
                        <span asp-validation-for="Subject" class="validation"> </span>
                    </td>
                </tr>
                <tr><td colspan="2" style="height: 1px"></td></tr>
                <tr>
                    <td style="width:50px;height:10px">
                        <label asp-for="Comment"></label>
                    </td>
                <tr>
                    <td colspan="2" style="height:10px">
                        <textarea asp-for="Comment"></textarea>
                    </td>
                </tr>
                <tr>
                    <td style="width:210px;height:10px;">
                        <span asp-validation-for="Comment" class="validation"> </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Изпрати" class="button-submit" style="margin:0 150px" />
                    </td>
                </tr>
            </table>
        </form>
    </article>
</section>