@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <ul>
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/Index", new { area = "" })"
                  method="post" id="logoutForm">
                <button type="submit"style="color: white;background-color: rgba(0, 0, 0, 0.34);" >Изход</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul>
        <li>
            <a asp-area="Identity" asp-page="/Account/Register">Регистриране</a>
        </li>
        <li>
            <a asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
    </ul>
}

