@{
    ViewData["Title"] = "Home Page";
}
    <style>
    body {
        background-color:black;
    }
    footer{
        color:white;
        text-align:center;
    }
        .glow {
            font-size: 80px;
            color: #fff;
            text-align: center;
            text-shadow: 0 0 10px grey, 0 0 20px grey, 0 0 30px grey, 0 0 40px grey, 0 0 50px grey, 0 0 60px grey, 0 0 70px grey;
        }
    </style>

<h1 class="glow" style="margin-top:20px;">Welcome to MovieInfo!</h1>

<div id="demo" class="carousel slide" data-ride="carousel" style="width:500px; height:500px; margin-top:20px;">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/1.jpg" alt="Warcraft" style="width:500px; height:500px;">
        </div>
        <div class="carousel-item">
            <img src="images/img2.jpg" alt="Star Wars" style="width:500px; height:500px;">
        </div>
        <div class="carousel-item">
            <img src="images/img3.jpg" alt="Godzilla" style="width:500px; height:500px;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<div style="text-align:center; margin-top:40px;">
    <a class="fab fa-youtube" href="https://www.youtube.com/" style="color:red; font-size:40px; margin-right:40px;"></a>
    <a class="fab fa-facebook-square" href="https://www.facebook.com/" style="color:cornflowerblue;font-size:40px; margin-right:40px;"></a>
    <a class="fab fa-twitch" href="https://www.twitch.tv/" style="color:purple; font-size:40px;"></a>
</div>
<article style="color:white; margin-left:600px; margin-top:-550px; margin-bottom:350px;">
    <h1>For Us</h1>
    <br />
    <p>
        MovieInfo is an online database of information related
        to films – including cast, genres, year of comming ,
        budget for the films, trailers and etc.<br />
        The movie page of Movieinfo is accessible 
        to all internet users, but a registration process 
        is necessary to contribute information to the site.
        For account registration please contact the support team!
    </p>
</article>





